<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/toast_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#e1ded8"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/n1"
            android:orientation="vertical"
            tools:ignore="textSize"
            android:layout_marginTop="70dp"
            android:background="#c8aba6"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ar_Rahman"
                android:id="@+id/textview2"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#5C5457"
                android:paddingTop="15dp"
                android:paddingStart="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_play_circle"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_bookmark_border_exact"
                    />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"

                >

             <ImageView
                  android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:id="@+id/image"
                 android:background="#EDEAEB"
                    android:src="@drawable/ic_baseline_bookmark_border_exact"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/textview"
                    android:text="ٱلْرَّحْمَـانُ"
                    android:textColor="@color/white" />


            </RelativeLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>








</LinearLayout>